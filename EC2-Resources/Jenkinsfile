pipeline {
    agent any
    environment {
        WORK_DIR="/var/lib/jenkins/workspace/terraform-integration-jenkins"
    }
    stages{
        stage("clone"){
            steps{
                git 'https://github.com/thehulkhunts/Terraform-Realtime-Scenarios.git'
            }
        }
        stage("initialize"){
            steps{
                dir("EC2-Resources"){
                    sh 'terraform init'
                }
            }
        }
        stage("plan"){
            steps{
                dir("EC2-Resources"){
                    sh 'terraform plan -var-file terraform.tfvars '
                }
            }
        }
        stage("apply-the-infra"){
            steps{
                dir("EC2-Resources"){
                    sh 'terraform apply -var-file terraform.tfvars'
                }
            }
        }
         stage("destroy-the-infra"){
            steps{
                dir("EC2-Resources"){
                    sh 'terraform destroy -var-file terraform.tfvars'
                }
            }
        }
    }
}
